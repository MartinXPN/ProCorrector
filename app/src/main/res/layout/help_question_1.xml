<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/edit_correct_text_main_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:gravity="start"
        android:textColor="@color/help_text_question"
        android:textSize="@dimen/help_question_text_size"
        android:text="@string/help_question_1_question"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:backgroundTint="@color/main_new_text_button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_add_note_margin"
            android:layout_marginBottom="@dimen/main_add_note_margin"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_note_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/help_text_answer"
            android:textSize="@dimen/help_answer_text_size"
            android:text="@string/help_question_1_answer"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/fab"
            android:layout_toStartOf="@+id/fab" />

    </RelativeLayout>
</LinearLayout>