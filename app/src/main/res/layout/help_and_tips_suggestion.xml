<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_and_tips_suggestion"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/hint_semitransparent_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semitransparent_background_black"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/help_show_suggestions_arrow"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_up_right"
        android:layout_alignRight="@+id/hint_semitransparent_background"
        android:layout_alignEnd="@+id/hint_semitransparent_background"/>

    <TextView
        android:id="@+id/help_show_suggestions_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ebebeb"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Tap on lamp to\nshow/hide suggestions"
        android:layout_below="@+id/help_show_suggestions_arrow"
        android:layout_alignRight="@+id/help_show_suggestions_arrow"
        android:layout_alignEnd="@+id/help_show_suggestions_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d2f4f4f4"
        android:textSize="@dimen/welcome_page_continue_size"
        android:text="(Tap to continue)"
        android:layout_below="@+id/help_show_suggestions_hint"
        android:layout_centerHorizontal="true" />

</RelativeLayout>